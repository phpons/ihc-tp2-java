<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SensorsActivity">

    <TextView
        android:id="@+id/text_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_proximity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="@+id/text_light"
        app:layout_constraintStart_toStartOf="@+id/text_light"
        app:layout_constraintTop_toBottomOf="@+id/text_light" />

    <TextView
        android:id="@+id/text_light_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Light:"
        app:layout_constraintBottom_toBottomOf="@+id/text_light"
        app:layout_constraintEnd_toStartOf="@+id/text_light"
        app:layout_constraintTop_toTopOf="@+id/text_light"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/text_proximity_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Proximity:"
        app:layout_constraintBottom_toBottomOf="@+id/text_proximity"
        app:layout_constraintEnd_toStartOf="@+id/text_proximity"
        app:layout_constraintTop_toTopOf="@+id/text_proximity" />

</androidx.constraintlayout.widget.ConstraintLayout>