<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccelerometerTrackerActivity">

    <EditText
        android:id="@+id/editZAxis"
        android:layout_width="86dp"
        android:layout_height="48dp"
        android:layout_marginStart="240dp"
        android:ems="10"
        android:hint="Z"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/editYAxis"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editYAxis"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="185dp"
        android:ems="10"
        android:hint="Y"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editXAxis"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editXAxis"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="14dp"
        android:ems="10"
        android:hint="X"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/editYAxis"
        app:layout_constraintEnd_toStartOf="@+id/editYAxis"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>